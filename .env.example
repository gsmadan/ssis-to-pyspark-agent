# SSIS to PySpark Converter - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# LLM Provider Configuration
# ============================================
# Options: auto, openai, gemini, databricks, none
DEFAULT_LLM_PROVIDER=auto

# ============================================
# OpenAI Configuration (if using OpenAI)
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# ============================================
# Google Gemini Configuration (if using Gemini)
# ============================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
DEFAULT_MODEL=gemini-2.5-flash

# ============================================
# Databricks Configuration (if using Databricks)
# ============================================
# Your Databricks workspace URL
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com

# Databricks Personal Access Token
# Generate from: Workspace → User Settings → Access Tokens
DATABRICKS_TOKEN=your-databricks-token-here

# Model Serving Endpoint Name
# Available endpoints: databricks-dbrx-instruct, databricks-meta-llama-3-1-405b-instruct
DATABRICKS_ENDPOINT=databricks-meta-llama-3-1-405b-instruct

# ============================================
# Code Generation Settings
# ============================================
MAX_TOKENS=4000
TEMPERATURE=0.1

# ============================================
# System Settings
# ============================================
OUTPUT_DIRECTORY=./output
TEMP_DIRECTORY=./temp
LOG_LEVEL=INFO

# ============================================
# Validation Settings
# ============================================
ENABLE_SYNTAX_CHECK=True
ENABLE_LOGIC_VALIDATION=True
